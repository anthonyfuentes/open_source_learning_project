
<%= simple_form_for(@resource, html: { class: 'form-pad-bottom'
                    }, wrapper: :vertical_form) do |f| %>

  <%= f.input :title %>

  <%= f.input :subtitle %>

  <%= f.input :description %>

  <%= render 'links/link_form', f: f %>

  <%= f.input :media_type,
  collection: Resource.media_types.keys.map(&:humanize),
  value_method: :downcase, as: :select %>

  <%= f.input :credits %>

  <%= f.association :category %>

  <!-- TODO: debug - not creating feedback -->
  <%= render 'feedbacks/feedback_form_nested', f: f %>

  <%= f.submit 'Share', class: "btn btn-success" %>

<% end %>
