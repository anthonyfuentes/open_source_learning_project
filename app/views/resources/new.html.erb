
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <div class="btn-group" role="group">
      <%= link_to 'Resources', resources_path,
        class: 'btn btn-default' %>
      <%= link_to 'Curriculums', curriculums_path,
        class: 'btn btn-default' %>
      <%= link_to 'Share Resource', new_resource_path,
        class: 'btn btn-default active' %>
    </div>

    <hr>


    <% if current_user %>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <h1>Share a Learning Resource</h1>
          <%= render 'resource_form' %>
        </div>
      </div>
    <% else %>
      <h3 class="text-muted">Sign up to share and the learning resources you love :D</h3>
    <% end %>
  </div>
</div>

