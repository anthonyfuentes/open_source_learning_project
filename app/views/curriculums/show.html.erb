
<div class="jumbotron">
  <h1><%= @curriculum.title %></h1>
  <div class="row">
    <div class="col-xs-8">
      <p><%= @curriculum.subtitle  %></p>
      <p>Created by <%= link_to "#{@curriculum.creator_name}", @curriculum.creator %></p>
    </div>

    <div class="col-xs-4">
      <p><strong><%= @curriculum.category_name %></strong></p>
      <!-- TODO: Add curriculum accumulated tags? -->
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-4">
    <div class="thumbnail">
      <p><%= @curriculum.attribute_average(:rating) %>/10<br>
        Score</p>
    </div>
  </div>

  <div class="col-xs-4">
    <div class="thumbnail">
      <p><%= @curriculum.attribute_average(:difficulty) %>/10<br>
      Difficulty</p>
    </div>
  </div>

  <div class="col-xs-4">
    <div class="thumbnail">
      <p><%= display_time(@curriculum) %></p>
    </div>
  </div>

</div>


<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">

      <div class="col-xs-8">
        <%= @curriculum.description %>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <%= render @curriculum.resources %>
  </div>
</div>
