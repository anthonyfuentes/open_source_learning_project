<%= form_tag(curriculums_path, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>

  <%= select_tag :category_id, options_from_collection_for_select(Category.all, "id", "name" ), {:include_blank => 'Category'} %>

  <%= select_tag(:tag_id, Tag.all) %>

  <%= submit_tag("Search") %>
<% end %>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="btn-group" role="group">
      <%= link_to 'Resources', resources_path,
        class: 'btn btn-default' %>
      <%= link_to 'Curriculums', curriculums_path,
        class: 'btn btn-default active' %>
    </div>
  <hr>
  <%= will_paginate @curriculums %>
  <%= render @curriculums %>
  <%= will_paginate @curriculums %>
  </div>
</div>
