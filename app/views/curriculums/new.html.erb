

<%= render 'shared/editing_header' %>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <div class="btn-group" role="group">
      <%= link_to 'Resources', resources_path,
        class: 'btn btn-default' %>
      <%= link_to 'Curriculums', curriculums_path,
        class: 'btn btn-default' %>
      <%= link_to 'Share Resource', new_resource_path,
        class: 'btn btn-default' %>
      <%= link_to 'Create Curriculum', new_curriculum_path,
        class: 'btn btn-default active' %>
    </div>

    <hr>


    <% if current_user %>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <h1>Create a Curriculum</h1>
          <%= render 'curriculum_form_new' %>
        </div>
      </div>
    <% else %>
      <h3 class="text-muted">Sign up to create a curriculum :D</h3>
    <% end %>
  </div>
</div>


