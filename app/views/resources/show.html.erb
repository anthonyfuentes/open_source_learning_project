
<div class="jumbotron">

  <h1><%= @resource.title %></h1>

  <div class="row">

    <div class="col-xs-8">
      <p><%= @resource.subtitle  %></p>
      <p>Credit: <%= @resource.credits %></p>
      <% @resource.links.each do |link| %>
      <a href="<%=link.url%>"><%= link.url %></a>
      <% end %>
    </div>

    <div class="col-xs-4">
      <p><strong><%# @resource.category.name %></strong></p>
      <p><%= display_tags(@resource) %></p>
    </div>

  </div>

</div>

<div class="row">

  <div class="col-xs-4">
    <div class="thumbnail">
      <p><%= @resource.attribute_average(:rating) %>/10<br>
        Score</p>
    </div>
  </div>

  <div class="col-xs-4">
    <div class="thumbnail">
      <p><%= @resource.attribute_average(:difficulty) %>/10<br>
      Difficulty</p>
    </div>
  </div>

  <div class="col-xs-4">
    <div class="thumbnail">
      <p><%= display_time(@resource) %></p>
    </div>
  </div>

</div>

<div class="panel panel-default">

  <div class="panel-body">

    <div class="row">

      <div class="col-xs-8">
        <%= @resource.description %>
      </div>

    </div>

  </div>

</div>

<% @resource.comments.each do |comment| %>
  <%= render partial: "shared/comment", locals: { comment: comment } %>
<% end %>

<div class="row">

  <div class="col-xs-1">
  </div>

  <div class="col-xs-11">
    <%= render partial: "shared/comment_form", locals:
      { comment_path: url_for([@resource, :comments]) } %>
  </div>

</div>
