
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">

      <div class="col-xs-8">
        <h3><%= link_to resource.title, resource_path(resource) %></h3>
        <p><%= resource.subtitle %></p>
        <p><i>by <%= resource.submitter.username %></i></p>
      </div>

      <div class="col-xs-4">
        <!--TODO: tags-->
        <p>Programming, Algorithms</p>
        <div class="row">
          <div class="col-xs-6">
            <p><%= display_time(resource) %></p>
          </div>
          <div class="col-xs-6">
            <p><%= resource.attribute_average(:rating) %>/10<br>
            Score</p>
          </div>
        </div>

        <%= resource_url(resource) %>

        <% if curriculum_id = session[:curriculum_id] %>
            <%= curriculum_resource_toggle_link(curriculum_id, resource.id) %>
        <% end %>
      </div>

    </div>
  </div>
</div>
