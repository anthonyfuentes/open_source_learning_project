
<% if curriculum = Curriculum.find_by(id: cookies.signed[:curriculum_id]) %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2 class="inline-headers">Adding Resources to <%= curriculum.title %></h2>
      <% if curriculum %>
        <%= link_to "Finish Adding Resources",
          edit_user_curriculum_path(current_user.id,
                                    curriculum.id),
                                    class: 'btn btn-success' %>
                                <% end %>
    </div>
  </div>
<% end %>
